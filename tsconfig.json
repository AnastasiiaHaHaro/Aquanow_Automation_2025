{
    "compilerOptions": {
      "target": "ES2017",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true, 
      "allowJs": false, 
      "outDir": "./dist", 
      "baseUrl": ".", 
      "paths": {
        "*": ["node_modules/*", "src/*"]
      }
    },
    "include": ["**/*.ts", "scr/apiRequester.mts"], 
    "exclude": ["node_modules"]
  }